<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/storyhead"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgforprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/one" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgforprofile"
            android:fontFamily="serif"
            android:paddingStart="3dp"
            android:paddingEnd="10dp"
            android:text="name"
            android:id="@+id/author_name"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgforprofile"
            android:layout_below="@id/author_name"
            android:fontFamily="serif"
            android:text="date"
            android:paddingStart="3dp"
            android:paddingEnd="10dp"
            android:id="@+id/date"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/more_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_more" />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/storyhead"
        android:id="@+id/storytitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/storyphoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/storytitel"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_name_24" />
    <View
        android:id="@+id/partion"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/material_dynamic_neutral70" />
</RelativeLayout>