<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.Searchragment">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Search"
          android:fontFamily="@font/bigshot_one"
          android:textSize="23sp"
          android:layout_marginTop="15dp"
          android:layout_marginStart="10dp"
          android:id="@+id/home"/>
      <SearchView
          android:id="@+id/search"
          android:layout_below="@+id/home"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:iconifiedByDefault="false"
          android:queryHint="Enter Story titels or auther name" />
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/idLVProgrammingLanguages"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/search" />
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/categoryitems"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_below="@id/idLVProgrammingLanguages"/>
  </RelativeLayout>
</FrameLayout>