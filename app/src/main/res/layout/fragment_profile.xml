<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/bigshot_one"
                android:text="@string/profile"
                android:textSize="23sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/accinfo"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@id/home">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/two"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="?android:attr/windowBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
                    app:layout_constraintVertical_bias="1.0" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/one"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/jwt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/accinfo"
                android:text="zzz"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/general"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/jwt"
                android:padding="20dp"
                android:text="General Setting" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/jwt"
                android:layout_alignParentEnd="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/general"
                android:background="@color/material_dynamic_tertiary50" />
            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/general"
                android:layout_marginTop="1dp"
                android:padding="20dp"
                android:text="Account Setting" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/general"
                android:layout_alignParentEnd="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/privacy"
                android:background="@color/material_dynamic_tertiary50" />

            <TextView
                android:id="@+id/reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/privacy"
                android:layout_marginTop="1dp"
                android:padding="20dp"
                android:text="Reading Setting" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/privacy"
                android:layout_alignParentEnd="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/reading"
                android:background="@color/material_dynamic_tertiary50" />

            <TextView
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reading"
                android:layout_marginTop="1dp"
                android:padding="20dp"
                android:text="Switch to dark mode" />
            <Switch
                android:id="@+id/switchtheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reading"
                android:layout_marginTop="15dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/change"
                android:background="@color/material_dynamic_tertiary50" />
            <TextView
                android:id="@+id/logout"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/change"
                android:padding="20dp"
                android:text="Logout" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/change"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>