<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:gravity="center"/>
    <ImageView
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image"
        android:layout_marginTop="15dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_below="@+id/image"
        android:text="@string/detail"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@id/image"
        android:fontFamily="@font/roboto"
        android:text="@string/brand_name"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/category"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@id/image"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:layout_below="@id/category"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/price"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/category"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:layout_below="@id/price"
        android:layout_marginTop="20dp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/stock"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/price"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warranty"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/stock"
        android:layout_marginTop="20dp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/warrenty"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/stock"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint_type"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:layout_below="@id/warrenty"
        android:layout_marginTop="20dp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/finger"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/warrenty"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_level"
        android:textStyle="bold"
        android:layout_below="@id/finger"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/camera"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/finger"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />
    </RelativeLayout>
</ScrollView>